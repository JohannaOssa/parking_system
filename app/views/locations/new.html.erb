<%= form_for @location, url:{action:'create'} do |f| %>

<div class="row" >
  <div class="col-md-6">
    <h1 class="text-center">Register Location</h1>
  </div>
</div>

<form class="form" role="form">
  <div class="form-group">
     <%= f.label :address %> <br>
    <div class="col-lg-6">
      <%= f.text_field :address, placeholder: "Enter the Address" %>
    </div>
  </br>
  </div>
  <div class="form-group">
    <%= f.label :name %> <br>
    <div class="col-lg-6">
      <%= f.text_field :name, placeholder: "Enter the Name" %>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="form-group">
      <%= f.label :description %> <br>
      <div class="col-lg-1">
        <%= f.text_area :description, placeholder: "Enter the Description" %>
      </div>
    </div>
  </div>

    <div class="row">
      <div class="form-group">
        <%= f.submit "Register", class: 'btn btn-success'%>
        <%= link_to "Cancel", locations_path, class: 'btn btn-default'%>
      </div>
    </div>
  </br>
  </br>
</div>
</form>
<% end %>
