<%= form_for @location, url:{action:'create'} do |f| %>

<h1>Register Location</h1>

<form class="form" role="form">
  <div class="form-group">
     <%= f.label :address %> <br>
    <div class="col-lg-2">
      <%= f.text_field :address %>
    </div>
  </br>
  </div>
  <div class="form-group">
    <%= f.label :name %> <br>
    <div class="col-lg-2">
      <%= f.text_field :name %>
    </div>
  </div>
  </br>
  <div class="form-group">
    <%= f.label :description %> <br>
    <div class="col-lg-6">
      <%= f.text_area :description %>
    </div>
  </div>
    </br>
  <div class="form-group" "actions">
    <div class="col-lg-12">
      <%= f.submit "Register"%>
    </div>
  </div>
  </br>
</div>
</form>
<% end %>
