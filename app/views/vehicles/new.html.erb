<%= form_for @vehicle, url:{action:'create'} do |f| %>

<div class="row" >
  <div class="col-md-6">
    <h1 class="text-center"> Register your Vehicle</h1>
  </div>
</div>

<form class="form" role="form">
  <div class="form-group">
     <%= f.label :model %> <br>
    <div class="col-lg-2">
      <%= f.text_field :model, placeholder: "Enter the Model"%>
    </div>
  </br>
  </div>
  <div class="form-group">
    <%= f.label :vin %> <br>
    <div class="col-lg-2">
      <%= f.text_field :vin, placeholder: "Enter the Vin"%>
    </div>
  </div>
  </br>
  <div class="form-group">
    <%= f.label :year %> <br>
    <div class="col-lg-2">
      <%= f.select :year, (Time.zone.now.year - 100)..(Time.zone.now.year), class: 'form-control', required: true %>
    </div>
  </div>
    </br>
    </br>
    <div class="form-group">
      <%= f.submit "Register", class: 'btn btn-success'%>
      <%= link_to "Cancel", user_vehicles_path(current_user), class: 'btn btn-default'%>
    </div>
  </br>
</div>
</form>
<% end %>
