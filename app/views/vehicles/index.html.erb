<div class="col-md-2">
  <%= render partial: "layouts/user_menu" %>
</div>

<h1>Registered Vehicles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Model</th>
      <th>Vin</th>
      <th>Year</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle|%>
      <tr>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.vin %></td>
        <td>
          <div class="row">
            <%= link_to "Edit",
                edit_user_vehicle_path(current_user, vehicle),
                class: 'btn btn-default' %>
            <%= link_to "Delete",
                user_vehicle_path(current_user, vehicle),
                method: 'delete',
                class: 'btn btn-danger',
                data: {confirm: "Are you sure?"} %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</br>
<div class="row">
  <%= link_to "Add Vehicle",   new_user_vehicle_path(current_user), class: 'btn btn-success'%>
</div>
